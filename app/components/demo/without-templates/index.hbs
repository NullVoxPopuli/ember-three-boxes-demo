<Info @fps={{this.fps}} />
<Controls @onUpdate={{this.onCountUpdate}} />

<main>
  <Demo::WithoutTemplates::Scene @onInit={{this.animate}} as |s|>
    <Demo::WithoutTemplates::Scene::Lights::DirectionalLight
      @scene={{s.scene}}
      @x={{-5}}
      @y={{0}}
      @z={{-10}}
    />
    <Demo::WithoutTemplates::Scene::Cameras::PerspectiveCamera
      @z={{3.2}}
      @aspectRatio={{this.aspectRatio}}
      @emberSceneComponent={{s.emberSceneComponent}}
    />

    {{#each this.appState.rotations as |rotation|}}
      <Demo::WithoutTemplates::Scene::Objects::Mesh
        @rotation={{rotation.r}}
        @scene={{s.scene}}
        @material={{this.material}}
        @geometry={{this.geometry}}
      />
    {{/each}}

  </Demo::WithoutTemplates::Scene>
</main>
