<div class='controls'>
  <label>
    Number of Boxes
    {{#let (array 1 2 20 100 200 500 1000 2000 10000) as |counts|}}
      <select {{on 'change' this.updateCount}}>
        {{#each counts as |count|}}
          <option
            selected={{eq this.appState.count count}}
            value={{count}}
          >
            {{count}}
          </option>
        {{/each}}
      </select>
    {{/let}}
  </label>
</div>
