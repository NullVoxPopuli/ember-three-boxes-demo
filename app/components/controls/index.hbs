<div class='controls'>
  <label>
    Amount
    {{#let (array 20 100 200 500 1000 2000 10000) as |counts|}}
      <select {{on 'change' this.updateCount}}>
        {{#each counts as |count|}}
          <option value={{count}}>{{count}}</option>
        {{/each}}
      </select>
    {{/let}}
  </label>
</div>